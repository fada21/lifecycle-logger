<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fada21.lifecycleplayground">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.StandardActivity"
            android:launchMode="standard" />

        <activity
            android:name=".activities.WithRetainedFragmentActivity"
            android:launchMode="standard" />

        <activity
            android:name=".activities.ReorderedToFrontActivity"
            android:launchMode="standard" />

        <activity
            android:name=".activities.SingleTaskActivity"
            android:launchMode="singleTask" />

        <activity
            android:name=".activities.IntermediateActivity"
            android:launchMode="standard" />

        <activity
            android:name=".activities.ConfChangeHandledActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:launchMode="standard" />

        <activity
            android:name=".activities.ForResultActivity"
            android:launchMode="standard" />

    </application>

</manifest>

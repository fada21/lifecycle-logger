<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.fada21.lifecycleplayground.fragments.HomeFragment"
              tools:showIn="@layout/activity_home">

    <Button
        android:id="@+id/btn_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:onClick="onClick"
        android:text="@string/standard"/>

    <Button
        android:id="@+id/btn_retained"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:onClick="onClick"
        android:text="@string/with_retained_fragment"/>

    <Button
        android:id="@+id/btn_reorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:onClick="onClick"
        android:text="@string/reordered_to_front"/>

    <Button
        android:id="@+id/btn_single_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:onClick="onClick"
        android:text="@string/single_task"/>

    <Button
        android:id="@+id/btn_config_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:onClick="onClick"
        android:text="@string/conf_change_handled"/>

    <Button
        android:id="@+id/btn_for_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:onClick="onClick"
        android:text="@string/for_result"/>

</LinearLayout>
